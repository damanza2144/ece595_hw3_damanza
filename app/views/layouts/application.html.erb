<!DOCTYPE html>
<html>
<head>
  <title>Jewelry</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "/stylesheets/depot", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("/images/logo.png") %>
		<%= @page_title || "Jewelry Store" %>
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
					<%= render @cart %>
				<% end %>
			<% end %>
			
			<a href="/">Home</a><br /><br />
			<a href="/orders">Orders</a><br />
			<a href="/products">Products</a><br />
			<a href="/carts">Carts</a><br />
			<a href="/line_items">Line Items</a><br />
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
